<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingActivity"
        android:orientation="vertical"
        android:background="@color/myyellow">
        <ImageView
            android:id="@+id/userImg"
            android:src="@drawable/icon_profile"
            android:scaleType="fitXY"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"/>
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="@color/myblue"
            android:text="나"/>
        <TextView
            android:id="@+id/userEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="익명 계정"/>
        <ProgressBar
            android:id="@+id/progressBar"
            android:visibility="gone"
            android:progressTint="@color/myblue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/setNameBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/radius"
            android:text="닉네임 변경하기"/>
        <EditText
            android:id="@+id/nameArea"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="바꿀 닉네임을 입력하세요."
            android:visibility="gone"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/nameOkBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="확인"
            android:visibility="gone"
            android:background="@drawable/radius"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/setImgBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/radius"
            android:text="이미지 설정하기"/>



        <Button
            android:id="@+id/emailLoginBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="이메일 계정으로 전환하기"
            android:background="@drawable/radius"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/emailArea"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="이메일을 입력하세요"
            android:visibility="gone"
            android:inputType="textEmailAddress"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/pwArea"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="비밀번호를 입력하세요"
            android:visibility="gone"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/linkOkBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="확인"
            android:visibility="gone"
            android:background="@drawable/radius"
            android:layout_gravity="center"/>


    </LinearLayout>
</layout>